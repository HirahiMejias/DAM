            android:id="@+id/pregunta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="2. ¿En qué año llegó el hombre a la Luna?"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvResultado1" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pregunta2">

            <RadioButton
                android:id="@+id/rb2_op1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1965" />

            <RadioButton
                android:id="@+id/rb2_op2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1972" />

            <RadioButton
                android:id="@+id/rb2_op3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1969" />
        </RadioGroup>

        <!-- TextView para mostrar el resultado de la respuesta 2 -->
