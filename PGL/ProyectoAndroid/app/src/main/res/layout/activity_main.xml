<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8A2828">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Título -->

        <!-- Logo -->
        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="365dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="BIENVENIDO A BOLLO'S CATERING"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/welcomeTitle"
            android:layout_marginTop="32dp"
            android:contentDescription="Logo"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTitle" />

        <!-- Descripción con Material Components -->

        <!-- Botón de Material -->
        <TextView
            android:id="@+id/welcomeDescription"
            android:layout_width="355dp"
            android:layout_height="70dp"
            android:layout_below="@id/welcomeTitle"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@id/logoImage"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="Gestiona tus pedidos, ajusta raciones y define dietas especiales de forma rápida y sencilla. ¡Optimiza tus entregas hoy mismo!"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoImage" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accessButton"
            android:layout_width="327dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="216dp"
            android:backgroundTint="#2C2C2C"
            android:text="ACCEDER"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
